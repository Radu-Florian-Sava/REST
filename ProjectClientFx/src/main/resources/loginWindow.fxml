<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
          prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label text="Autentificare" GridPane.columnIndex="1" GridPane.valignment="CENTER">
            <font>
                <Font name="Calibri" size="36.0"/>
            </font>
        </Label>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="12.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
                <TextField fx:id="usernameTextField"/>
                <PasswordField fx:id="passwordTextField"/>
            </children>
        </VBox>
        <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="100.0" spacing="25.0" GridPane.rowIndex="1">
            <children>
                <Label text="Nume utilizator">
                    <font>
                        <Font name="Calibri" size="14.0"/>
                    </font>
                </Label>
                <Label text="Parola">
                    <font>
                        <Font name="Calibri" size="14.0"/>
                    </font>
                </Label>
            </children>
        </VBox>
        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#loginUser" text="Continua"
                GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    </children>
</GridPane>
